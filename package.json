{
  "name": "cc-dashboard",
  "version": "1.0.0",
  "description": "CLI dashboard for viewing Claude Code configurations",
  "type": "module",
  "bin": {
    "cc-dashboard": "./dist/cli.js"
  },
  "files": ["dist"],
  "scripts": {
    "dev": "tsx src/cli.tsx",
    "build": "tsup",
    "build:bun": "bun build src/cli.tsx --compile --outfile dist/cc-dashboard",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "ink": "^5.0.0",
    "ink-spinner": "^5.0.0",
    "@inkjs/ui": "^2.0.0",
    "react": "^18.3.0",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/node": "^22.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20"
  },
  "keywords": ["claude", "cli", "dashboard", "tui", "config"],
  "license": "MIT"
}
